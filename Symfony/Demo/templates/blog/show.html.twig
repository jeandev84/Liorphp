{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">
            Ecrit le {{ article.createdAt | date('d/m/Y') }}
            a  {{ article.createdAt | date('H:i') }}
            dans la categorie <b>{{ article.category.title }}</b>
        </div>
        <div class="content">
                <img src="{{ article.image }}" alt="">
                {{ article.content | raw }}
        </div>
    </article>
    <hr>
    <section id="commentaires">
        {% for  comment in article.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{ comment.author }} (<small>{{ comment.createdAt | date('d/m/Y a H:i') }}</small>)
                    </div>
                    <div class="col">
                        {{ comment.content | raw }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}